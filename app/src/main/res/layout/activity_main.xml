<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorStart"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margMain"
            android:layout_marginRight="@dimen/margMain"
            android:layout_marginTop="100dp"
            android:background="@drawable/buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="Вопросы по физике"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="28sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margMain"
            android:layout_marginRight="@dimen/margMain"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="Почемучки"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="28sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margMain"
            android:layout_marginRight="@dimen/margMain"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="Латынь"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="28sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margMain"
            android:layout_marginRight="@dimen/margMain"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="Список книг"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="28sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margMain"
            android:layout_marginRight="@dimen/margMain"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttons"
            android:fontFamily="sans-serif-condensed"
            android:text="Чтение"
            android:onClick="launchDailyMin"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="28sp"
            android:textStyle="normal" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>

